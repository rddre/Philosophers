NAME = push_swap
CC = gcc
CFLAGS = -Wall -Wextra -Werror
SRC = src/philosophers.c\
		src/parsing/parsing.c\
		utils/print.c
OBJ = $(SRC:.c=.o)

# RÃ¨gles
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re